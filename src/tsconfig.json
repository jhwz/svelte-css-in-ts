{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "DOM"],
		"target": "es2020",


		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"resolveJsonModule": true,

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true
	},
	"include": ["**/*.d.ts", "**/*.js", "**/*.ts"],
    "compileOnSave": true,
	"watchOptions": {
		"excludeDirectories": ["node_modules", ".vscode"],
	}
}
